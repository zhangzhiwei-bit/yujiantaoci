}.messages{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-top: 20rpx;  
}
.message{
  margin-top: 50rpx;
  border-bottom: #999999 solid 2rpx;
}
.content{
  display: flex;
  justify-content: center;
  align-items: center;
}
.pic{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #999999;
}
.pic_con{
  display: flex;
  justify-content: center;
  align-items: left;
  flex-direction: column;
  width: 600rpx;
  margin-left: 20rpx;
}
.name{
  color: rgba(80, 80, 80, 1);
	background-color: rgba(153, 153, 153, 0);
  font-size: 30rpx;
  font-weight: bold;
}
.miaoshu{
  margin-top: 20rpx;
  color: rgba(80, 80, 80, 1);
	background-color: rgba(153, 153, 153, 0);
  font-size: 20rpx;
}
.pinglun{
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item image{
  width: 40rpx;
  height: 40rpx;
}
.item{
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(80, 80, 80, 1);
	font-size: 25rpx;
}
.commend{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 600rpx;
  border-bottom: #cccccc solid 2rpx;
  position: fixed;
  bottom: 20rpx;
  margin-left: 60rpx;
}
.commend view{
  background-color: #cccccc;
}
.header{
  margin-left: 260rpx;
  color: rgba(0, 0, 0, 1);
	background-color: rgba(153, 153, 153, 1);
	border-radius: 33rpx;
