.messages{
  background-color: white;
  width: 92%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: auto;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.message{
  display: flex;
  justify-content: left;
  align-items: center;
  width: 100%;
  height: 90rpx;
  border-bottom:rgba(80, 80, 80, 1) solid 2rpx;
}
.icon{
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background-color: #e5e5e5;
  text-align: center;
}
.content{
  display: flex;
  align-items: left;
  flex-direction: column;
  margin-left: 20rpx;
}
.content :nth-child(1){
  color: rgba(80, 80, 80, 1);
	background-color: rgba(153, 153, 153, 0);
  font-size: 45rpx;
  font-weight: bold;
}
.content :nth-child(2){
  color: rgba(80, 80, 80, 1);
	background-color: rgba(153, 153, 153, 0);
  font-size: 25rpx;
  margin-bottom: 20rpx;
}